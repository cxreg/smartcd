if [[ -n $ZSH_VERSION ]]; then
    autoload -U compinit
    compinit
    autoload -U +X bashcompinit && bashcompinit
fi

function _smartcd_completion() {
    COMPREPLY=()

    local cur="${COMP_WORDS[COMP_CWORD]}"
    local prev="${COMP_WORDS[COMP_CWORD-1]}"
    local base=$(_smartcd_base)

    local prev_ifs="$IFS"
    IFS=$' \t\n'

    local words
    if [[ $COMP_CWORD == 1 ]]; then
        words="cd pushd popd setup config template edit show filename export import reenter inform helper"
    elif [[ $COMP_CWORD == 2 ]]; then
        case $prev in
                         setup) words="cd pushd popd prompt-hook chpwd-hook exit-hook completion";;
                      template) words="edit create list show run install delete";;
            edit|show|filename) words="enter leave";;
                        helper) words="run";;
        esac
    elif [[ $COMP_CWORD == 3 ]]; then
        case "${COMP_WORDS[COMP_CWORD-2]}" in
            template) case $prev in
                            edit|show|run|install|delete) words="$(smartcd template list)";;
                      esac
                      ;;
              helper) case $prev in
                            run) local _old_ifs="$IFS"
                                 IFS=$'\n'
                                 words="$(command ls $base/helper)"
                                 IFS="$_old_ifs"
                                 ;;
                      esac
                      ;;
        esac
    elif (( $COMP_CWORD >= 4 )) && [[ ${COMP_WORDS[1]} == "helper" && ${COMP_WORDS[2]} == "run" ]]; then
        local helper="${COMP_WORDS[3]}"
        if [[ -f "$base/helper/$helper/completion" ]]; then
            # Pass unparsed tokens as arguments
            local SMARTCD_COMP_CWORD=$(( $COMP_CWORD - 3))
            source "$base/helper/$helper/completion" "${COMP_WORDS[@]:4}"
        fi
    fi

    COMPREPLY=( $(compgen -W "$words" -- "$cur") )

    IFS="$prev_ifs"
}

complete -o bashdefault -o default -F _smartcd_completion smartcd 2>/dev/null \
    || complete -o default -F _smartcd_completion smartcd
